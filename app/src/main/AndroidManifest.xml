<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hera.flixnow.made.submission2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="hera.flixnow.made.submission2.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CapstoneProject"
        tools:ignore="AllowBackup">
        <activity android:name="hera.flixnow.made.submission2.ui.components.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hera.flixnow.made.submission2.ui.components.detail.DetailActivity" />
    </application>

</manifest>